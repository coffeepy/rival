{
	"name": "rival",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"test": "bun test",
		"test:step-actors": "bun test/step-actors.test.ts",
		"check": "bun run check:types && bun run check:lint",
		"check:types": "tsc --noEmit",
		"check:lint": "biome check .",
		"check:format": "biome format --check .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint-staged": "lint-staged",
		"prepare": "husky",
		"release": "semantic-release",
		"ci": "bun run check && bun run test"
	},
	"dependencies": {
		"rivetkit": "^2.0.27",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.6",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"semantic-release": "^25.0.0",
		"typescript": "~5.9.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mjs,cjs,json}": ["biome check --write --no-errors-on-unmatched"]
	}
}
